doctype html
html
  include head.pug

  body
    div.container
      include header.pug

      div.container
        ul(class='nav nav-tabs')
           li(role='presentation')
              a(href='/') General

           if (config_rp_touchscreen_detected== '1')
             li(role='Display')
                a(href='/display') Display

           li(role='network')
              a(href='/network') Network
           li(role='presentation')
              a(href='/advanced') Advanced
           li(role='presentation' class='active')
              a(href='/info') Information

        br
        h5 This section contains information on RoPieee and the Pi itself.
        br

        form(class='form-horizontal')
          div(class='form-group')
            label(class='control-label col-sm-2') RoPieee version
            div(class='col-sm-10')
              input(class='form-control' name='version' style='background:#337ab7;color:white' value= config_rp_version readonly)
          div(class='form-group')
            label(class='control-label col-sm-2') Board Temperature
            div(class='col-sm-10')
              input(class='form-control' name='temperature' value= config_rp_temperature readonly)
        hr
        h5 This table shows the list of RoPieee's software components and their version numbers.
        br
        div(class='container')
          table(class='table')
            thead
              tr
                th Package
                th Version
            tbody
              each val, key in config_rp_software
                tr
                td #{key}
                td #{val}
    br
    br 
    include footer.pug
