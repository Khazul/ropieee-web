[Unit]
Description=Ropieee web frontend
After=network.target

[Service]
WorkingDirectory=/opt/ropieee-web/server
ExecStart=/usr/bin/node /opt/ropieee-web/server/app.js
Restart=always
RestartSec=10
SyslogIdentifier=ropieee-web
Environment=NODE_PORT=80 NODE_SETTINGS=/etc/ropieee.conf

[Install]
WantedBy=multi-user.target

